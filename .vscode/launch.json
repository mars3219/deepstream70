{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug DeepStream App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/deepstream-test1-app",  // 실행할 바이너리 경로
            "args": [
                "${fileDirname}/dstest1_config.yml"
            ],  // 필요시 프로그램 인자 추가
            "stopAtEntry": false,
            "cwd": "${fileDirname}",  // 현재 작업 디렉토리
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  // gdb 경로
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make",  // 'make install'을 자동 실행할 수 있도록 설정
            "logging": {
                "trace": true,
                "traceResponse": true
            },
            "internalConsoleOptions": "openOnSessionStart",
            "symbolLoadInfo": {
                "loadAll": false, // 모든 심볼 파일 로딩 비활성화
                "exceptions": ["*.cpp", "*.c"] // 사용자 코드에서만 심볼 로드
            },
        }
    ]
}
